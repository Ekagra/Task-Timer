<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_main"
        android:background="@color/background"
        android:paddingVertical="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="TASK#1"
            android:id="@+id/task"
            android:textStyle="bold"
            >

        </TextView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2.5dp"
            android:layout_toRightOf="@id/task"
            android:layout_marginLeft="5dp"
            android:src="@drawable/subtask"
            android:background="@null"
            android:id="@+id/create_subtask"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2.5dp"
            android:layout_toRightOf="@id/create_subtask"
            android:layout_marginLeft="5dp"
            android:src="@drawable/delete"
            android:background="@null"
            android:id="@+id/delete_task"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/faded"
            android:textSize="16sp"
            android:layout_below="@+id/task"
            android:layout_alignStart="@id/task"
            android:id="@+id/note"
            >

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/clock"
            android:textSize="16sp"
            android:textColor="@color/white"
            >

        </TextView>


    </RelativeLayout>

</RelativeLayout>